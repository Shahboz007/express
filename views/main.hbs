<main>
  <h1>Users list</h1>
  {{#if users}}
    {{#each users}}
      <div class="card">
        <img
          src="https://www.w3schools.com/howto/img_avatar.png"
          alt="Avatar"
          style="width:100%"
        />
        <div class="container">
          <h4><b>{{username}}</b></h4>
          <p>Age: {{age}}</p>
          <a class="btn" href="/users/{{id}}">More info...</a>
          <a class="btn" href="/users/edit/{{id}}">Edit info</a>
        </div>
      </div>
    {{/each}}
  {{else}}
    <p>Userlarni barcha listi...</p>
  {{/if}}
</main>